/**
 * FleetFlow Security Rules
 * 
 * Core Philosophy:
 * This ruleset implements a robust Role-Based Access Control (RBAC) model based on 
 * "Authorization Independence." Instead of checking a user's role within their own profile
 * (which requires a costly `get()` call), authorization is determined by the existence 
 * of the user's UID within specialized role-based collections (e.g., /roles_fleetManagers/{userId}).
 * This makes security checks atomic, performant, and highly scalable.
 * 
 * Data Structure:
 * - /users/{userId}: Private user profiles.
 * - /roles_{roleName}/{userId}: Flag collections used for RBAC checks.
 * - /vehicles, /drivers, /trips, etc.: Global organizational assets secured by user roles.
 * - /static_roles: Read-only metadata for UI and configuration.
 * 
 * Key Security Decisions:
 * - Default Posture: All data is private. Access must be explicitly granted by role membership.
 * - Path-Based User Security: Users can only manage their own /users/{userId} document.
 * - Ownership vs. Role: Operational data (Trips, Vehicles) is considered an organizational 
 *   asset. Access is determined by role (e.g., Dispatcher) rather than individual document ownership.
 * - Prototype Self-Provisioning: For this prototype, users are allowed to create their own role 
 *   documents during registration to enable immediate access.
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    /** @description Checks if the user is authenticated. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the authenticated user's UID matches the provided userId. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** @description Checks if a document exists for the user in a specific role collection. */
    function hasRole(roleCollection) {
      return isSignedIn() && exists(/databases/$(database)/documents/$(roleCollection)/$(request.auth.uid));
    }

    // Role-Specific Helpers
    function isFleetManager() { return hasRole('roles_fleetManagers'); }
    function isDispatcher() { return hasRole('roles_dispatchers'); }
    function isSafetyOfficer() { return hasRole('roles_safetyOfficers'); }
    function isFinancialAnalyst() { return hasRole('roles_financialAnalysts'); }

    /** @description Ensures a document exists before allowing an update or delete. */
    function documentExists() {
      return resource != null;
    }

    // --- COLLECTION RULES ---

    /**
     * @description User profiles containing identity and role metadata.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; 
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && documentExists() && request.resource.data.id == resource.data.id;
      allow delete: if false;
    }

    /**
     * @description Flag collections for RBAC. Existence of UID grants the role.
     * @path /roles_{roleType}/{userId}
     */
    match /{roleColl}/{userId} {
      function isRoleCollection() {
        return roleColl in ['roles_fleetManagers', 'roles_dispatchers', 'roles_safetyOfficers', 'roles_financialAnalysts'];
      }

      allow get: if isRoleCollection() && (isOwner(userId) || isFleetManager());
      allow list: if isRoleCollection() && isFleetManager();
      // PROTOTYPE ONLY: Allow users to create their own role flag upon registration
      allow create: if isRoleCollection() && isOwner(userId);
      allow update, delete: if false; 
    }

    /**
     * @description Global list of system roles.
     */
    match /static_roles/{roleId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    /**
     * @description Central registry of vehicles.
     */
    match /vehicles/{vehicleId} {
      allow get, list: if isFleetManager() || isDispatcher() || isSafetyOfficer();
      allow create: if isFleetManager();
      allow update: if isFleetManager() && documentExists();
      allow delete: if isFleetManager() && documentExists();
    }

    /**
     * @description Driver personnel records.
     */
    match /drivers/{driverId} {
      allow get, list: if isFleetManager() || isDispatcher() || isSafetyOfficer();
      allow create: if isFleetManager() || isSafetyOfficer();
      allow update: if (isFleetManager() || isSafetyOfficer()) && documentExists();
      allow delete: if isFleetManager() && documentExists();
    }

    /**
     * @description Operational trip records and dispatch history.
     */
    match /trips/{tripId} {
      allow get, list: if isFleetManager() || isDispatcher();
      allow create: if isFleetManager() || isDispatcher();
      allow update: if (isFleetManager() || isDispatcher()) && documentExists();
      allow delete: if isFleetManager() && documentExists();
    }

    /**
     * @description Logs of vehicle maintenance.
     */
    match /maintenance_logs/{logId} {
      allow get, list: if isFleetManager();
      allow create: if isFleetManager();
      allow update, delete: if isFleetManager() && documentExists();
    }

    /**
     * @description Tracking of fuel purchases.
     */
    match /fuel_logs/{logId} {
      allow get, list: if isFleetManager() || isFinancialAnalyst();
      allow create: if isFleetManager();
      allow update, delete: if isFleetManager() && documentExists();
    }

    /**
     * @description General operational expenses.
     */
    match /expenses/{expenseId} {
      allow get, list: if isFleetManager() || isFinancialAnalyst();
      allow create: if isFleetManager();
      allow update, delete: if isFleetManager() && documentExists();
    }
  }
}